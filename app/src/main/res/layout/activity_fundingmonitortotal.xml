<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundingMonitorTotal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/jelly_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="15dp"
            android:text="Funding/젤리기부"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/news_add_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="3dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:background="#00ff0000"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="225dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/wround_square"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/fund_img"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />
            <TextView
                android:id="@+id/fundingTitle"
                android:layout_marginTop="140dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="제목:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/fundingAmount"
                android:layout_marginTop="165dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="목표 모금액:  실모금액:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/fundingPurpose"
                android:layout_marginTop="190dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="펀딩 목적:"
                android:textSize="18sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="550dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/wround_square"
            android:elevation="10dp">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="25dp"
                android:text="젤리 사용 정보"
                android:textSize="20sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/review_img1"
                            android:layout_width="250dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:background="@drawable/round_squre_nocol"/>

                        <TextView
                            android:id="@+id/review_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="글"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="28dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/review_img2"
                            android:layout_width="250dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:background="@drawable/round_squre_nocol"/>

                        <TextView
                            android:id="@+id/review_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="글"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </FrameLayout>


    </FrameLayout>
</RelativeLayout>