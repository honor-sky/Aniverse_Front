<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductBuy">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/background">

    </FrameLayout>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:background="#00ff0000"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="500dp"
        android:background="#ffffff"></FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/wround_square"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="15dp"
            android:text="정보 입력"
            android:textColor="#7ED687"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/bitem_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="배송지"
                    android:textColor="#7ED687"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/receiver"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="받는 분" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/zipcode"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="우편번호" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="310dp"
                        android:layout_height="50dp"
                        android:hint="상세 주소" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneNum"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="연락처"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="결제 수단"
                    android:textColor="#7ED687"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <RadioGroup
                    android:id="@+id/purchaseWay"
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/card"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:text="카드 간편 결제" />

                    <RadioButton
                        android:id="@+id/account"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:text="계좌 간편 결제" />

                    <RadioButton
                        android:id="@+id/normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일반 결제" />

                </RadioGroup>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="600dp"
        android:background="#00ffffff"
        android:elevation="10dp">

        <Button
            android:id="@+id/buy_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_round_squre"
            android:gravity="center"
            android:text="결제하기"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"></Button>
    </FrameLayout>
</RelativeLayout>