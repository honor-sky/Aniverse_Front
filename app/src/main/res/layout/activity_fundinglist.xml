<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FundingList">

    <Button
        android:id="@+id/funding_add_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="325dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="#00ff0000"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="417dp"
        android:layout_height="150dp"
        android:background="@drawable/jelly_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="20dp"
            android:text="Funding / 젤리기부"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/top_round_wsquare">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fundRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="640dp"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/adopt_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_adopt_icon" />

            <ImageButton
                android:id="@+id/funding_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="100dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_funding_icon" />

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="180dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_baseline_pets_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/market_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

            <ImageButton
                android:id="@+id/mypage_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="330dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_baseline_person_24" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </FrameLayout>



</RelativeLayout>