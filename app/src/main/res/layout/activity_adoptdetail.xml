<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AdoptDetail">

    <FrameLayout
        android:layout_width="417dp"
        android:layout_height="150dp"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:text="@string/Adopt"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:background="#00ff0000"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
            android:contentDescription="@string/BACK" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/top_round_wsquare">

        <ImageView
            android:id="@+id/ani_img"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/Image"
            android:background="@drawable/round_squre_nocol"/>
        <ScrollView
            android:layout_width="361dp"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="330dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Space
                    android:layout_width="310dp"
                    android:layout_height="10dp" />
                <TextView
                    android:id="@+id/animal_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnimalInfo"
                    android:textColor="#7ED687"
                    android:textSize="24sp"
                    android:textStyle="bold">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/species_gender_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="품종: 믹스   성별: 여    나이: 2세"
                    android:textSize="20sp"/>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/neutering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Neutering"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Weight"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/vaccination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Vaccination"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Disease"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/findSpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FindSpot"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/animalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ExtraInfo"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Deadline"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/adoptCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Requirement"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/center_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#7ED687"
                    android:textSize="24sp"
                    android:textStyle="bold">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/centerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CenterName"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/centerAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Center_Address"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="310dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/centerPhoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Center_Phone"
                    android:textSize="20sp">
                </TextView>



            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="640dp"
            android:background="#00ffffff">

            <Button
                android:id="@+id/request_btn"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/gradient_round_squre"
                android:text="@string/Apply"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>